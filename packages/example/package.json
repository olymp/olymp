{
  "version": "17.2.22",
  "name": "olymp-example",
  "description": "Olymp",
  "author": "Benjamin Kniffler <benjamin@diego.one>",
  "private": true,
  "engines": {
    "node": "8.1.4",
    "npm": "4.6.1",
    "yarn": "1.0.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "unmockedModulePathPatterns": [
      "react",
      "enzyme",
      "jasmine-enzyme"
    ]
  },
  "scripts": {
    "publish": "git push dev master",
    "up": "yarn upgrade-interactive --latest",
    "dev": "olymp dev",
    "build": "olymp build",
    "start": "olymp start",
    "heroku-postbuild": "olymp build",
    "prettier": "prettier-eslint --write --print-width 80 --single-quote --trailing-comma es5 \"app/**/*.js\"",
    "electron": "GRAPHQL_URL=https://site.com/graphql olymp build --electron",
    "electron:dev": "olymp dev --electron",
    "electron:mac": "electron-builder",
    "electron:win": "electron-builder --win",
    "electron:win32": "electron-builder --win --ia32",
    "electron:publish": "yarn run electron && npm version patch -m \"Upgrade to %s for reasons\" --force && electron-builder --publish always --mac --win --ia32 --x64"
  },
  "dependencies": {
    "mongodb": "^2.2.31",
    "olymp": "^17.2.22",
    "olymp-auth": "^17.2.22",
    "olymp-crypt": "^17.2.17",
    "olymp-fela": "^17.2.21",
    "olymp-google": "^17.2.21",
    "olymp-graphql": "^17.2.17",
    "olymp-icons": "^17.2.17",
    "olymp-locale": "^17.2.20",
    "olymp-mail": "^17.2.20",
    "olymp-router": "^17.2.20",
    "olymp-utils": "^17.2.20",
    "olymp-webpack-babel": "^17.2.17",
    "olymp-webpack-less": "^17.2.17",
    "react": "^16.0.0-rc.3",
    "react-dom": "^16.0.0-rc.3"
  },
  "devDependencies": {
    "eslint-config-olymp": "^16.0.31",
    "olymp-webpack-electron": "^17.2.17"
  },
  "electronDependencies": {},
  "build": {
    "appId": "olymp.example.app",
    "productName": "Olymp",
    "directories": {
      "app": ".dist/electron",
      "output": ".dist",
      "buildResources": "public"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "dmg": {
      "title": "Olymp Example",
      "backgroundColor": "#8e44ad"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "publish": {
      "provider": "s3",
      "bucket": "olymp",
      "path": "updater",
      "region": "eu-central-1"
    }
  },
  "olymp": {
    "app": "./app",
    "server": "./server",
    "plugins": [
      "less",
      "babel"
    ],
    "modifyVars": {
      "font-size-base": "15px",
      "primary-color": "#8e44ad"
    }
  }
}
