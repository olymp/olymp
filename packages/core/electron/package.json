{
  "name": "electron-app",
  "version": "0.1.0",
  "main": "main.js",
  "build": {
    "appId": "app.x.y",
    "productName": "Name",
    "directories": {
      "app": ".dist/electron",
      "output": ".dist",
      "buildResources": "public"
    },
    "mac": { "target": ["dmg", "zip"] },
    "win": { "target": ["nsis"] },
    "dmg": { "title": "Title", "backgroundColor": "#8e44ad" },
    "nsis": { "deleteAppDataOnUninstall": true },
    "publish": {
      "provider": "s3",
      "bucket": "bucketname",
      "path": "foldername",
      "region": "eu-central-1"
    }
  }
}
